<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinetiqa.raindrops"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RaindropsTheme" >
        <activity
            android:name="com.kinetiqa.raindrops.Initialize"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kinetiqa.raindrops.Setup"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.kinetiqa.raindrops.Home"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.kinetiqa.raindrops.Submenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Bookmarks"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Store"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Settings"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Messages"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Awards"
            android:screenOrientation="landscape" />
        <activity
            android:name=".About"
            android:screenOrientation="landscape" />

        <service android:name="com.kinetiqa.raindrops.service.BackgroundDownloader" >
        </service>

        <receiver android:name="com.kinetiqa.raindrops.receiver.OnAlarmReceive" >
        </receiver>
    </application>

</manifest>