<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="560dip"
        android:layout_height="360dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:background="@color/off_white"
        android:orientation="vertical" >

        <!-- Top Bar -->

        <RelativeLayout
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@color/alert_grey"
            android:padding="5dip" >

            <Button
                android:id="@+id/new_message_send"
                android:layout_width="wrap_content"
                android:layout_height="80dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="10dip"
                android:background="@null"
                android:drawableRight="@drawable/dark_send"
                android:text="Send"
                android:textColor="@color/deep_grey"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/new_message_close"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@null"
                android:src="@drawable/nav_exit_button_selector" />
        </RelativeLayout>

        <!-- Future Support for Receipient -->

        <RelativeLayout
            android:layout_width="1000dip"
            android:layout_height="400dip"
            android:layout_below="@+id/dialog_header"
            android:background="#000" >

            <VideoView
                android:id="@+id/new_message_video"
                android:layout_width="match_parent"
                android:layout_height="280dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/playback_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dip" >

                <Button
                    android:id="@+id/record_playback_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nav_green_button_selector"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="Pause"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/record_playback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nav_green_button_selector"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="Play"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>