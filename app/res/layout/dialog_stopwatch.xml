<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="560dip"
        android:layout_height="360dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/off_white"
        android:orientation="vertical" >

        <!-- Top Bar -->

        <RelativeLayout
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:background="@color/alert_grey"
            android:padding="5dip" >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="Training"
                android:textColor="@color/deep_grey"
                android:textSize="32sp" />

            <ImageButton
                android:id="@+id/dialog_close"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@null"
                android:src="@drawable/nav_exit_button_selector" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dip"
            android:text="10:02:20"
            android:textColor="@color/deep_grey"
            android:textSize="58dip" />

        <TextView
            android:id="@+id/dialog_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="previous training time 10:02:20"
            android:textColor="@color/deep_grey"
            android:textSize="18dip" />

        <Button
            android:id="@+id/dialog_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_previous"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="24dip"
            android:background="@drawable/nav_green_button_selector"
            android:text="Finished"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
</RelativeLayout>