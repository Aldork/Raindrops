<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dip"
    android:layout_height="420dip"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <RelativeLayout
        android:id="@+id/store_item"
        android:layout_width="420dip"
        android:layout_height="330dip"
        android:background="@drawable/store_bg"
        android:orientation="vertical"
        android:padding="16dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/store_item_preview"
                android:layout_width="wrap_content"
                android:layout_height="220dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dip"
                android:src="@drawable/main_bg" />

            <RelativeLayout
                android:id="@+id/store_item_preview_dim"
                android:layout_width="match_parent"
                android:layout_height="220dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dip"
                android:background="#AAFFFFFF"
                android:visibility="gone" >
            </RelativeLayout>

            <TextView
                android:id="@+id/store_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dip"
                android:layout_marginLeft="10dip"
                android:text="Background"
                android:textColor="#1dd2ff"
                android:textSize="44dip" />

            <RelativeLayout
                android:id="@+id/store_item_in_use_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dip" >

                <ImageView
                    android:id="@+id/store_item_in_use"
                    android:layout_width="68dip"
                    android:layout_height="68dip"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="8dip"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:src="@drawable/completed_check" />
            </RelativeLayout>

            <TextView
                android:id="@+id/store_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dip"
                android:layout_marginRight="10dip"
                android:text="1200 points"
                android:textColor="#104957"
                android:textSize="44dip" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>