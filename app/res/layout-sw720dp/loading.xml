<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/loading_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="820dip"
        android:layout_centerVertical="true"
        android:text="@string/epic"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loading_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dip"
        android:layout_toRightOf="@+id/loading_l"
        android:text="@string/wheels"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/loading_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/loading_c"
        android:layout_marginLeft="2dip"
        android:text="loading"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

</RelativeLayout>