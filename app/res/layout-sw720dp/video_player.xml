<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2000000" >

    <VideoView
        android:id="@+id/vp_video"
        android:layout_width="1200dip"
        android:layout_height="610dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip" >
    </VideoView>

    <SeekBar
        android:id="@+id/vp_seekbar"
        android:layout_width="1200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_video"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dip" />

    <RelativeLayout
        android:id="@+id/vp_play_pause"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@+id/vp_seekbar"
        android:layout_centerHorizontal="true" >

        <ImageButton
            android:id="@+id/vp_pause"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@null"
            android:src="@drawable/light_pause" />

        <ImageButton
            android:id="@+id/vp_play"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@null"
            android:src="@drawable/light_play"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/vp_rewind"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@+id/vp_seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="60dip"
        android:layout_marginTop="0dip"
        android:layout_toLeftOf="@+id/vp_play_pause"
        android:background="@null"
        android:src="@drawable/light_rewind" />

    <ImageButton
        android:id="@+id/vp_forward"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_below="@+id/vp_seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dip"
        android:layout_marginTop="0dip"
        android:layout_toRightOf="@+id/vp_play_pause"
        android:background="@null"
        android:src="@drawable/light_forward" />

    <Button
        android:id="@+id/vp_prev"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/vp_seekbar"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="30dip"
        android:background="@null"
        android:drawableLeft="@drawable/light_prev"
        android:drawablePadding="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="Prev"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/vp_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_seekbar"
        android:layout_marginRight="20dip"
        android:layout_marginTop="24dip"
        android:layout_toLeftOf="@+id/vp_next_container"
        android:text="1:01/2:20"
        android:textColor="@color/rarity_white"
        android:textSize="21sp" />

    <RelativeLayout
        android:id="@+id/vp_next_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vp_seekbar"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="30dip" >

        <Button
            android:id="@+id/vp_next"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:background="@null"
            android:drawablePadding="10dip"
            android:drawableRight="@drawable/light_next"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vp_info_container"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/item_info_container"
        android:paddingBottom="16dip"
        android:paddingTop="16dip" >

        <ImageButton
            android:id="@+id/vp_about"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@null"
            android:src="@drawable/item_about_selector" />

        <TextView
            android:id="@+id/vp_about_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vp_about"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/vp_bookmark"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_below="@+id/vp_about_desc"
            android:background="@null"
            android:src="@drawable/item_bookmark_selector" />

        <TextView
            android:id="@+id/vp_bookmark_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vp_bookmark"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="Bookmark"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/vp_practice"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_below="@+id/vp_bookmark_desc"
            android:background="@null"
            android:src="@drawable/item_practice_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/vp_practice_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vp_practice"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="Practice!"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/vp_close"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:background="@null"
        android:src="@drawable/nav_exit_button_selector" />

</RelativeLayout>