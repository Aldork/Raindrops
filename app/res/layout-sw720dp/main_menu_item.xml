<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dip"
    android:layout_height="380dip"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <RelativeLayout
        android:id="@+id/menu_item"
        android:layout_width="360dip"
        android:layout_height="380dip"
        android:background="@drawable/item_bg"
        android:orientation="vertical"
        android:padding="24dip" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/menu_type_icon"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dip"
                android:scaleType="fitXY"
                android:src="@null" />

            <TextView
                android:id="@+id/menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dip"
                android:gravity="center"
                android:text="Components and Equipment and Stuff"
                android:textColor="@color/rarity_white"
                android:textSize="38dip" />

            <RelativeLayout
                android:id="@+id/home_completed_img_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dip" >

                <ImageView
                    android:id="@+id/completed_check_img"
                    android:layout_width="68dip"
                    android:layout_height="68dip"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="8dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/completed_check"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/home_alt_img"
                android:layout_width="68dip"
                android:layout_height="68dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:layout_toLeftOf="@+id/home_completed_img_container"
                android:scaleType="fitXY"
                android:src="@drawable/blue_saved"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/main_menu_item_completed_container"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="66dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/main_menu_item_star"
                    android:layout_width="42dip"
                    android:layout_height="42dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/light_star" />

                <TextView
                    android:id="@+id/main_menu_item_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@+id/main_menu_item_star"
                    android:gravity="top"
                    android:text="12/13"
                    android:textColor="@color/white"
                    android:textSize="22dip" />

                <TextView
                    android:id="@+id/main_menu_item_completed_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/main_menu_item_completed"
                    android:gravity="top"
                    android:text=" completed"
                    android:textColor="#66FFFFFF"
                    android:textSize="22dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_menu_item_clock_container"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/main_menu_item_clock"
                    android:layout_width="42dip"
                    android:layout_height="42dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/light_clock" />

                <TextView
                    android:id="@+id/main_menu_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@+id/main_menu_item_clock"
                    android:gravity="top"
                    android:text="153 min"
                    android:textColor="@color/white"
                    android:textSize="22dip" />

                <TextView
                    android:id="@+id/main_menu_item_time_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/main_menu_item_time"
                    android:gravity="top"
                    android:text=" practiced"
                    android:textColor="#66FFFFFF"
                    android:textSize="22dip" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>