<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/rt_viewer"
        android:layout_width="1200dip"
        android:layout_height="660dip"
        android:layout_above="@+id/rt_prev"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="14dip" />

    <Button
        android:id="@+id/rt_prev"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="30dip"
        android:background="@null"
        android:drawableLeft="@drawable/light_prev"
        android:drawablePadding="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="Prev"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/rt_next"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="30dip"
        android:background="@null"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/light_next"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rt_title"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:text="Video Activity #1"
        android:textColor="@color/rarity_white"
        android:textSize="24sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/rt_close"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dip"
        android:layout_marginTop="0dip"
        android:background="@null"
        android:src="@drawable/nav_exit_button_selector" />

    <RelativeLayout
        android:id="@+id/rt_info_container"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/item_info_container"
        android:paddingBottom="16dip"
        android:paddingTop="16dip" >

        <ImageButton
            android:id="@+id/rt_about"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@null"
            android:src="@drawable/item_about_selector" />

        <TextView
            android:id="@+id/rt_about_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_about"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/rt_bookmark"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_below="@+id/rt_about_desc"
            android:background="@null"
            android:src="@drawable/item_bookmark_selector" />

        <TextView
            android:id="@+id/rt_bookmark_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_bookmark"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="Bookmark"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/rt_practice"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_below="@+id/rt_bookmark_desc"
            android:background="@null"
            android:src="@drawable/item_practice_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rt_practice_desc"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rt_practice"
            android:layout_marginBottom="16dip"
            android:gravity="center"
            android:text="Practice!"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>