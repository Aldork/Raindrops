<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_message_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/grey50">

    <TextView
        android:id="@+id/item_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="Compose"
        android:textColor="@color/grey900"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/item_message_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_message_title"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="24dp"
        android:lines="1"
        android:text="Alfd nai as naop nsl nnkqli noapp weqmmee"
        android:textColor="@color/grey500"
        android:textSize="16dp" />
</RelativeLayout>
